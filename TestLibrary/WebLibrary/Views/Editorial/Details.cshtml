@model Infrastructure.Entity.Entity.EditorialEntity

@{
    ViewData["Title"] = "Details";
}

<h1>Editorial</h1>

<div>
    <h4>Editorial</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdEditorial" class="btn btn-warning">Edit</a> |
    @*<a asp-action="AddBook" asp-route-id="@Model.IdEditorial" class="btn btn-primary">Add Book</a> |*@
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

@if (Model.BookEntity.Count == 0)
{
    <h4>Not Ebooks add yet</h4>
}
else
{
<table class="table">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookEntity.FirstOrDefault().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookEntity.FirstOrDefault().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookEntity.FirstOrDefault().Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookEntity.FirstOrDefault().SuggestedPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookEntity.FirstOrDefault().Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BookEntity)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SuggestedPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                @*<td>
                        <a asp-action="EditBook" asp-route-id="@item.IdBook" class="btn btn-warning">Edit</a> |
                        <a asp-action="DetailsBook" asp-route-id="@item.IdBook" class="btn btn-info">Details</a> |
                        <a asp-action="DeleteBook" asp-route-id="@item.IdBook" class="btn btn-danger">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
}